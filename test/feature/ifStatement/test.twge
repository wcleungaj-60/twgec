def funcInlining() : actions {
    print(text = "print outside function 1");
    if("123" == "123") {
        print(text = "print true inside function 1");
        print(text = "print true inside function 2");
    }
    if("123" == "321") {
        print(text = "print false inside function 1");
        print(text = "print false inside function 2");
    }
    print(text = "print outside function 2");
}

block init {
    actions {
        if(true) {
            print(text = "print true 1");
            print(text = "print true 2");
            print(text = "print true 3");
        }
        if(false) {
            print(text = "print false 1");
            print(text = "print false 2");
            print(text = "print false 3");
        }
        funcInlining();
        if(true) {
            print(text = "print true 1");
            print(text = "print true 2");
            print(text = "print true 3");
        }
        if(false) {
            print(text = "print false 1");
            print(text = "print false 2");
            print(text = "print false 3");
        }
    }
}